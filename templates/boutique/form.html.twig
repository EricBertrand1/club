{% extends 'base.html.twig' %}
{% block title %}{{ is_edit ? 'Modifier' : 'Nouvelle' }} annonce{% endblock %}

{% block body %}
<div class="container py-4">
  <h1 class="mb-3">{{ is_edit ? 'Modifier' : 'Nouvelle' }} annonce</h1>

  {{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-5 g-4">
      <div class="col-md-6">{{ form_row(form.titreObjet) }}</div>
      <div class="col-md-6">{{ form_row(form.categorie) }}</div>
      <div class="col-md-4">{{ form_row(form.auteur) }}</div>
      <div class="col-md-4">{{ form_row(form.prix) }}</div>
      <div class="col-12">{{ form_row(form.description) }}</div>
      <div class="col-md-4">{{ form_row(form.image1) }}</div>
      <div class="col-md-4">{{ form_row(form.image2) }}</div>
      <div class="col-md-4">{{ form_row(form.image3) }}</div>
    </div>

    <div class="mt-3 d-flex gap-2">
      <button class="btn btn-primary" type="submit">{{ is_edit ? 'Enregistrer' : 'Publier' }}</button>
      <a class="btn btn-outline-secondary" href="{{ path('boutique_index') }}">Annuler</a>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
