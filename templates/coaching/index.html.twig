{% extends 'base.html.twig' %}
{% block title %}Coaching{% endblock %}

{% block body %}
<div class="container py-5">

  <form id="coaching-form" method="post" action="{{ path('coaching_index') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('coaching_save') }}">

    {# Header : titre, date, actions #}
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h1 class="page-title m-0">Coaching</h1>
        <div class="fs-6 text-muted">{{ todayFr }}</div>
      </div>

      <div class="d-flex align-items-center gap-2">
        <a href="{{ path('coaching_settings') }}" class="btn btn-outline-secondary">
          Modifier les thèmes
        </a>

        {# Enregistrer (soumet le formulaire) #}
        <button type="submit" class="btn btn-primary" id="save-btn">
          Enregistrer
        </button>

        {# Quitter (redirige au menu, mais demande confirmation si changements non sauvegardés) #}
        <button type="button" class="btn btn-outline-secondary" id="quit-btn" data-target-url="{{ path('app_home') }}">
          Quitter
        </button>
      </div>
    </div>

    <div class="alert alert-info mb-4">
      Score du jour : <strong id="day-score">{{ score }}</strong>
    </div>

    {# Sections #}
    {% for key, title in sections %}
      <div class="mb-4">
        <h3 class="h5 mb-3">{{ title }}</h3>

        {% for t in grouped[key] %}
          {% if t.label %}
            <div class="row g-2 align-items-center mb-2">
              <div class="col-auto">
                <input
                  class="form-check-input track-dirty"
                  type="checkbox"
                  id="chk-{{ t.id }}"
                  name="check[{{ t.id }}]"
                  {% if t.checked %}checked{% endif %}
                >
              </div>
              <div class="col">
                <label class="form-check-label" for="chk-{{ t.id }}">{{ t.label }}</label>
              </div>
              <div class="col-auto">
                <select
                  class="form-select form-select-sm coeff-select track-dirty"
                  name="coef[{{ t.id }}]"
                  aria-label="Coefficient"
                >
                  {% for v in [-3,-2,-1,0,1,2,3] %}
                    <option value="{{ v }}" {% if v == t.coef %}selected{% endif %}>{{ v }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endfor %}
  </form>
</div>

<script>
// --- Couleur des coefficients ---
function colorize(select) {
  const v = parseInt(select.value, 10);
  select.classList.remove('bg-success','bg-danger','text-white');
  if (v > 0) select.classList.add('bg-success','text-white');
  if (v < 0) select.classList.add('bg-danger','text-white');
}

// --- Score dynamique ---
function updateScore() {
  let score = 0;
  document.querySelectorAll('.row.g-2').forEach(row => {
    const chk = row.querySelector('input[type=checkbox]');
    const sel = row.querySelector('select.coeff-select');
    if (chk && chk.checked && sel) score += parseInt(sel.value, 10);
  });
  const el = document.getElementById('day-score');
  if (el) el.textContent = score;
}

// --- Détection de modifications ---
let isDirty = false;
function markDirty() { isDirty = true; }
document.querySelectorAll('.track-dirty').forEach(el => {
  el.addEventListener('change', () => { markDirty(); updateScore(); });
});

// Init UI
document.querySelectorAll('.coeff-select').forEach(s => {
  colorize(s);
  s.addEventListener('change', () => colorize(s));
});
updateScore();

// Ne pas alerter quand on ENREGISTRE (soumission du form)
document.getElementById('save-btn').addEventListener('click', () => {
  isDirty = false; // on considère que les changements seront sauvegardés
});

// Bouton QUITTER : confirme si isDirty
document.getElementById('quit-btn').addEventListener('click', (e) => {
  const url = e.currentTarget.getAttribute('data-target-url') || '/';
  if (!isDirty || confirm("Êtes-vous sûr de vouloir quitter sans enregistrer ?")) {
    window.location.href = url;
  }
});
</script>
{% endblock %}
