{# Template PDF autonome (pas d'extends base pour rester léger côté Dompdf) #}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Formation — {{ subcategory.name }}</title>
  <style>
    /* Styles simples compatibles Dompdf */
    body { font-family: DejaVu Sans, Arial, sans-serif; font-size: 12px; line-height: 1.45; color: #111827; }
    h1 { font-size: 20px; margin: 0 0 8px 0; }
    h2 { font-size: 16px; margin: 16px 0 8px; }
    p  { margin: 8px 0; }
    .muted { color: #6b7280; font-size: 11px; }
    .block { margin-bottom: 12px; }
    .img { display: block; margin: 8px 0; max-width: 100%; }
    .hr { height: 1px; background: #e5e7eb; border: 0; margin: 12px 0; }
    ul { margin: 6px 0 6px 20px; padding: 0; }
    li { margin: 3px 0; }
    .chip {
      display: inline-block; font-weight: 700; font-size: 12px;
      padding: 3px 8px; border-radius: 6px; margin-left: 6px;
      background: #e5e7eb; color: #111827;
    }
  </style>
</head>
<body>

  {# Détermine le code/label de catégorie pour le bandeau #}
  {% set catCode = subcategory.code %}
  {% set categoryLabels = {
    '000':'Généralités',
    '100':'Philosophie et psychologie',
    '200':'Religions',
    '300':'Sciences sociales',
    '400':'Langues',
    '500':'Sciences pures',
    '600':'Technologie et sciences appliquées',
    '700':'Arts et loisirs',
    '800':'Littérature',
    '900':'Histoire et géographie'
  } %}
  {% set catLabel = categoryLabels[catCode]|default(catCode) %}

  {# Bandeau couleur PDF #}
  {% include 'partials/_cat_banner_pdf.html.twig' with { catCode: catCode, catLabel: catLabel } %}

  <h1>
    {{ subcategory.name }}
    <span class="chip">{{ catCode }}</span>
  </h1>
  <div class="muted">{{ catLabel }}</div>
  <div class="hr"></div>

  {# Rendu simple des blocs (texte / image / titre / liste) #}
  {% if blocks is empty %}
    <p class="muted">Aucun contenu pour cette sous-catégorie.</p>
  {% else %}
    {% for b in blocks %}
      <div class="block">
        {% if b.type == 'title' %}
          <h2>{{ b.text|default('') }}</h2>
        {% elseif b.type == 'text' %}
          <p>{{ b.text|default('')|raw }}</p>
        {% elseif b.type == 'image' %}
          {% if b.path is defined and b.path %}
            <img class="img" src="{{ '/' ~ b.path }}" alt="">
          {% endif %}
        {% elseif b.type == 'list' and b.items is defined and b.items is iterable %}
          <ul>
            {% for it in b.items %}
              <li>{{ it }}</li>
            {% endfor %}
          </ul>
        {% else %}
          {% if b.text is defined %}<p>{{ b.text|raw }}</p>{% endif %}
        {% endif %}
      </div>
    {% endfor %}
  {% endif %}

</body>
</html>
